---
import { getRelatedGuides } from '../data/guides';

export interface Props {
  subject: string[];
}

const { subject } = Astro.props;
const relatedGuides = getRelatedGuides(subject);
---

<div class="space-y-6">
  <div class="bg-white rounded-lg shadow-md p-4">
    <h2 class="text-lg font-semibold text-primary-700 border-b border-gray-200 pb-2 mb-3">
      Table of Contents
    </h2>
    <nav class="toc">
      <ul class="space-y-2 pl-0 list-none">
        <li>
          <a href="#overview" class="text-gray-700 hover:text-primary-600 block py-1 border-l-2 border-transparent hover:border-primary-500 pl-3 transition-all">Overview</a>
        </li>
        <li>
          <a href="#getting-started" class="text-gray-700 hover:text-primary-600 block py-1 border-l-2 border-transparent hover:border-primary-500 pl-3 transition-all">Getting Started</a>
        </li>
        <li>
          <a href="#key-resources" class="text-gray-700 hover:text-primary-600 block py-1 border-l-2 border-transparent hover:border-primary-500 pl-3 transition-all">Key Resources</a>
        </li>
        <li>
          <a href="#databases" class="text-gray-700 hover:text-primary-600 block py-1 border-l-2 border-transparent hover:border-primary-500 pl-3 transition-all">Databases</a>
        </li>
        <li>
          <a href="#citation-styles" class="text-gray-700 hover:text-primary-600 block py-1 border-l-2 border-transparent hover:border-primary-500 pl-3 transition-all">Citation Styles</a>
        </li>
        <li>
          <a href="#help" class="text-gray-700 hover:text-primary-600 block py-1 border-l-2 border-transparent hover:border-primary-500 pl-3 transition-all">Get Help</a>
        </li>
      </ul>
    </nav>
  </div>
  
  {relatedGuides.length > 0 && (
    <div class="bg-white rounded-lg shadow-md p-4">
      <h2 class="text-lg font-semibold text-primary-700 border-b border-gray-200 pb-2 mb-3">
        Related Guides
      </h2>
      <ul class="space-y-2 pl-0 list-none">
        {relatedGuides.map(guide => (
          <li>
            <a 
              href={`/guides/${guide.id}`} 
              class="text-gray-700 hover:text-primary-600 flex items-center py-1"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              {guide.title}
            </a>
          </li>
        ))}
      </ul>
    </div>
  )}
  
  <div class="bg-secondary-50 rounded-lg shadow-md p-4">
    <h2 class="text-lg font-semibold text-secondary-700 border-b border-secondary-100 pb-2 mb-3">
      Need Help?
    </h2>
    <div class="text-gray-700">
      <p class="mb-2">Contact a librarian for research assistance:</p>
      <div class="flex items-center mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <a href="mailto:library@example.edu" class="text-secondary-600 hover:text-secondary-800">library@example.edu</a>
      </div>
      <div class="flex items-center mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <a href="tel:+15551234567" class="text-secondary-600 hover:text-secondary-800">(555) 123-4567</a>
      </div>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
        </svg>
        <a href="#" class="text-secondary-600 hover:text-secondary-800">Chat with a Librarian</a>
      </div>
    </div>
  </div>
</div>