---
const navItems = [
  { name: 'Home', url: '/' },
  { name: 'Guides', url: '/guides' },
  { name: 'Subjects', url: '/subjects' },
  { name: 'Librarians', url: '/librarians' },
  { name: 'About', url: '/about' }
];
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-10">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center justify-between py-4">
      <div class="flex items-center mb-4 lg:mb-0">
        <a href="/" class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary-500 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
          </svg>
          <span class="text-2xl font-bold text-primary-600">LibGuides</span>
        </a>
      </div>
      
      <div class="flex-grow max-w-md mx-4 hidden md:block">
        <div class="relative">
          <input 
            type="text" 
            placeholder="Search guides..." 
            class="w-full pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-300 focus:border-primary-500"
          />
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
      </div>
      
      <nav>
        <ul class="flex flex-wrap justify-center space-x-1 md:space-x-4">
          {navItems.map(item => (
            <li>
              <a 
                href={item.url} 
                class="inline-block px-3 py-2 text-primary-600 hover:text-primary-800 hover:bg-primary-50 rounded-md transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
    
    <div class="md:hidden pb-4">
      <div class="relative">
        <input 
          type="text" 
          placeholder="Search guides..." 
          class="w-full pl-10 pr-4 py-2 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary-300 focus:border-primary-500"
        />
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
    </div>
  </div>
</header>