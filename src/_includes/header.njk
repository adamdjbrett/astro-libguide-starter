<header class="bg-white border-b border-gray-200 sticky top-0 z-10">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center justify-between py-4">
      <div class="flex items-center mb-4 lg:mb-0">
        <a href="/" class="flex items-center">
          <img src="/assets/book.svg" alt="" class="h-8 w-8 text-primary-500 mr-2">
          <span class="text-2xl font-bold text-primary-600">LibGuides</span>
        </a>
      </div>
      
      <nav>
        <ul class="flex flex-wrap justify-center space-x-1 md:space-x-4">
          {% for item in navigation.main %}
          <li>
            <a 
              href="{{ item.url }}" 
              class="inline-block px-3 py-2 text-primary-600 hover:text-primary-800 hover:bg-primary-50 rounded-md transition-colors"
            >
              {{ item.text }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
</header>